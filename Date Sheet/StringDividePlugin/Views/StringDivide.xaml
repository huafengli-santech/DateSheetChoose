<UserControl x:Class="StringDividePlugin.Views.StringDivide"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:StringDividePlugin.Views"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="500"
             d:DesignWidth="300"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True"
             xmlns:theme="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Aero2">
    <Grid Loaded="Grid_Loaded">
        <Grid.RowDefinitions>
            <RowDefinition Height="25" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <!--搜索框-->
        <ComboBox ItemsSource="{Binding ModuleLists}"
                  SelectedItem="{Binding SelectedModuleName}"
                  VerticalAlignment="Center"
                  HorizontalAlignment="Center"
                  MinWidth="300"
                  IsTextSearchEnabled="True"
                  DisplayMemberPath="Name"
                  IsEditable="True" />
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition  Width="auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <!--当前已有的模板-->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0"
                           Margin="0 5"
                           Text="当前支持模块"
                           VerticalAlignment="Top"
                           HorizontalAlignment="Center" />
                <ScrollViewer Grid.Row="1"
                              Margin="5"
                              VerticalScrollBarVisibility="Auto">
                    <ListBox ItemsSource="{Binding ModuleLists}"
                             SelectedItem="{Binding SelectedModuleName}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Path=Name}"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Margin="5" />
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </ScrollViewer>
            </Grid>
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <!--右侧动态加载列表-->
                <ScrollViewer Grid.Row="0">
                    <ItemsControl ItemsSource="{Binding PortLists}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid  Margin="10 5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                        <ColumnDefinition Width="0.2*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock MinWidth="50"
                                               Text="{Binding CName}"
                                               VerticalAlignment="Center" />
                                    <ComboBox Grid.Column="1"
                                              ItemsSource="{Binding CParaNames}"
                                              SelectedIndex="{Binding Index}"
                                              Margin="10 0" />
                                    <TextBlock Grid.Column="2"
                                               Text="{Binding SelectedEParaName}"
                                               VerticalAlignment="Center" />
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
                <TabControl Grid.Row="1"
                            Margin="0 0 5 5">
                    <TabItem Cursor="Hand"
                             Header="选型结果"
                             Height="38"
                             Width="70"
                             Margin="5 0">
                        <Grid Background="#33ffffff">
                            <TextBox BorderBrush="Transparent"
                                     Text="{Binding ToolTipString}" />
                            <Button Content="拷贝至粘贴板"
                                    VerticalAlignment="Bottom"
                                    HorizontalAlignment="Center"
                                    Margin="5"
                                    Command="{Binding CopyToClipCmd}" />
                        </Grid>
                    </TabItem>
                    <TabItem Cursor="Hand"
                             Header="剪贴板检测结果"
                             Height="38"
                             Width="70"
                             Margin="5 0">
                        <Grid Background="#33ffffff">
                            <TextBlock Grid.Row="1"
                                       Margin="5">
                                <TextBlock.Text>
                                    <MultiBinding StringFormat="剪贴板检测值:{0}&#x0a;&#x0a;结果:&#x0a;  {1}">
                                        <Binding Path="ClipSourceString" />
                                        <Binding Path="ClipResultString" />
                                    </MultiBinding>
                                </TextBlock.Text></TextBlock>
                        </Grid>
                    </TabItem>
                </TabControl>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
